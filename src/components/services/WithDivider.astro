---
import { Image } from "astro:assets";
interface Props {
  title: string;
  content: string;
  image: ImageMetadata;
}

const { title, content, image } = Astro.props;
---

<svg
  aria-hidden="true"
  class="text-gray-100 dark:text-primary-foreground/50"
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 1440 320"
  ><path
    fill="currentColor"
    fill-opacity="1"
    d="M0,160L48,181.3C96,203,192,245,288,234.7C384,224,480,160,576,133.3C672,107,768,117,864,138.7C960,160,1056,192,1152,224C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
  ></path>
</svg>

<section
  class="pt-16 lg:pt-5 dark:border-gray-800 md:pt-32 bg-primary-foreground/50"
>
  <div class="mx-auto px-4 sm:px-12 xl:max-w-6xl xl:px-0">
    <div
      class="items-center md:flex flex-row-reverse justify-center space-y-3 md:gap-6 md:space-y-0"
    >
      <div class="md:w-1/2 lg:w-2/5">
        <Image
          class="h-full rounded-3xl object-cover md:-ml-8"
          src={image}
          alt={title}
          loading="eager"
          width={600}
          height={600}
        />
      </div>
      <div class="md:w-1/2">
        <span
          class="text-sm font-semibold font-suse uppercase tracking-widest text-primary dark:text-secondaryLight"
          >What We Do
        </span>
        <h2
          class="my-8 text-4xl font-bold text-gray-900 dark:text-white lg:text-4xl"
        >
          {title}
        </h2>
        <p class="text-gray-600 dark:text-gray-300">
          {content}
        </p>
      </div>
    </div>
  </div>
</section>
