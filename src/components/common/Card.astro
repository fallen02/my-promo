---
interface Props {
	title: string
	desc: string
	href: string
	icon: string
}

const { href, title, desc } = Astro.props;
---

<a class="xl:w-1/3 md:w-1/2 p-2 z-20 hover:cursor-pointer  relative"  href={href}>
    <div class="border border-white border-opacity-75 p-6 rounded-lg hover:bg-primary-foreground  bg-clip-padding backdrop-filter backdrop-blur-lg bg-opacity-0 ">
        <div class="w-10 h-10 inline-flex items-center justify-center rounded-full bg-gray-800 text-green-400 mb-4">
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-6 h-6" viewBox="0 0 24 24">
            <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
        </svg>
        </div>
        <h2 class="text-lg text-white font-medium title-font mb-2">{title}</h2>
        <p class="leading-relaxed text-base">{desc}</p>
    </div>
</a>
