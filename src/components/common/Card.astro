---
import { Image } from 'astro:assets';

interface Props {
	title: string
	desc: string
	href: string
	icon: ImageMetadata
}

const { href, title, desc, icon } = Astro.props;
---

<a class="xl:w-1/3 md:w-1/2 p-2 z-20 hover:cursor-pointer  relative"  href={href}>
    <div class="border border-white border-opacity-75 p-6 rounded-lg hover:bg-primary-foreground  bg-clip-padding backdrop-filter backdrop-blur-lg bg-opacity-0 ">
        <div class="w-10 h-10 inline-flex items-center justify-center rounded-full text-green-400 mb-4">
        <Image src={icon} alt="icon" class="w-10 h-10" loading={"eager"}/>
        </div>
        <h2 class="text-lg text-white font-medium title-font mb-2">{title}</h2>
        <p class="leading-relaxed text-base">{desc}</p>
    </div>
</a>
